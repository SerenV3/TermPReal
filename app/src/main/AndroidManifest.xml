<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- [기존 주석] 날씨 API와 통신하기 위해 인터넷 사용 권한이 반드시 필요합니다. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- [기존 주석] 사용자의 현재 위치를 기반으로 날씨를 조회하기 위한 권한입니다. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- [기존 주석] 잠금 화면 위로 Activity를 표시하고 기기를 깨우기 위한 권한 -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- [기존 주석] 진동을 사용하기 위한 권한 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- [기존 주석] 알람 예약 및 정확한 알람 실행을 위한 권한 (API 31+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- [기존 주석] Android 13 (API 33) 이상에서 알림을 표시하기 위한 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alarm">

        <!-- [새로운 내용] 날씨 정보를 표시하고 TTS 설정을 담당할 Activity를 등록합니다. -->
        <activity
            android:name=".WeatherActivity"
            android:exported="false" />

        <!-- [기존 주석] 알람이 울릴 때 표시될 전용 화면입니다. -->
        <activity
            android:name=".AlarmRingingActivity"
            android:exported="false"
            android:launchMode="singleInstance"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <activity
            android:name=".SetAlarmActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- [기존 주석] AlarmReceiver 등록 -->
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <!-- [기존 주석] 알람음 재생을 위한 Service 등록 -->
        <service
            android:name=".AlarmSoundService"
            android:exported="false" />

    </application>

</manifest>