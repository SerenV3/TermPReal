<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 알람 예약 및 정확한 알람 실행을 위한 권한 (API 31+) -->
    <!-- SCHEDULE_EXACT_ALARM 권한은 앱이 정확한 시간에 알람을 설정할 수 있도록 합니다. -->
    <!-- 이 권한은 특별 권한이며, 사용자가 설정에서 직접 활성화해야 할 수 있습니다. -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Android 13 (API 33) 이상에서 알림을 표시하기 위한 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- 기기 부팅 완료 시 알람 재등록을 위한 권한 (선택 사항) -->
    <!-- <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> -->


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alarm">
        <activity
            android:name=".SetAlarmActivity"
            android:exported="false">
            <!-- MainActivity에서만 호출되므로 exported="false" -->
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AlarmReceiver 등록 -->
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <!--
                exported="false"로 설정하면 이 BroadcastReceiver는 앱 내부 또는
                시스템(AlarmManager 등)에 의해서만 호출될 수 있습니다.
                외부 앱에서 직접 호출할 필요가 없으므로 보안상 false로 설정하는 것이 좋습니다.
            -->
            <!--
            만약 기기 부팅 시 알람을 재등록하려면 아래 intent-filter 추가
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            -->
        </receiver>

    </application>

</manifest>