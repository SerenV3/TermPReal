<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SetAlarmActivity">

    <!-- 시간을 선택하는 TimePicker -->
    <!-- 주석: android:timePickerMode="spinner" - TimePicker를 스피너(드롭다운) 형태로 표시합니다. "clock"으로 설정하면 시계 모양으로 표시됩니다. -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
        app:layout_constraintVertical_chainStyle="packed" /> <!-- TimePicker와 아래 버튼 레이아웃을 수직으로 묶어 중앙 정렬 효과 -->

    <!-- 저장 및 취소 버튼을 담는 LinearLayout -->
    <!-- 주석: android:orientation="horizontal" - 내부 뷰들을 가로로 배치합니다. -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 취소 버튼 -->
        <!-- 주석: android:layout_weight="1" - LinearLayout 내에서 남은 공간을 차지할 비율입니다. 두 버튼 모두 1로 설정하면 공간을 균등하게 나눠 가집니다. -->
        <!-- 주석: style="?android:attr/buttonBarButtonStyle" - 버튼에 기본 스타일을 적용합니다. -->
        <Button
            android:id="@+id/cancelButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_button_text"
            android:layout_marginEnd="8dp"/> <!-- 오른쪽 버튼과의 간격을 위한 마진 -->

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/saveButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_button_text"
            android:layout_marginStart="8dp"/> <!-- 왼쪽 버튼과의 간격을 위한 마진 -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>