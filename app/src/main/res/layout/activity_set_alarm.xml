<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setAlarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SetAlarmActivity">

    <!-- 1. 시간 선택 -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        android:timePickerMode="spinner"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        app:layout_constraintBottom_toTopOf="@+id/saveButtonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 2. 날짜 선택 -->
            <TextView
                android:id="@+id/datePickerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:text="@string/set_alarm_label_date_selection"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/selectedDateText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/set_alarm_text_today"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@+id/datePickerLabel"
                app:layout_constraintBottom_toBottomOf="@+id/datePickerLabel"
                app:layout_constraintStart_toEndOf="@+id/datePickerLabel"
                app:layout_constraintEnd_toStartOf="@+id/calendarButton"
                android:layout_marginStart="8dp"/>

            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@android:drawable/ic_menu_today"
                android:contentDescription="@string/set_alarm_desc_calendar_icon"
                app:layout_constraintTop_toTopOf="@+id/selectedDateText"
                app:layout_constraintBottom_toBottomOf="@+id/selectedDateText"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 3. 요일 반복 -->
            <LinearLayout
                android:id="@+id/repeatDaysLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/datePickerLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/sundayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textOn="@string/set_alarm_day_sun" android:textOff="@string/set_alarm_day_sun"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginEnd="2dp"/>
                <ToggleButton
                    android:id="@+id/mondayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textOn="@string/set_alarm_day_mon" android:textOff="@string/set_alarm_day_mon"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="2dp"/>
                <ToggleButton
                    android:id="@+id/tuesdayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textOn="@string/set_alarm_day_tue" android:textOff="@string/set_alarm_day_tue"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="2dp"/>
                <ToggleButton
                    android:id="@+id/wednesdayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textOn="@string/set_alarm_day_wed" android:textOff="@string/set_alarm_day_wed"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="2dp"/>
                <ToggleButton
                    android:id="@+id/thursdayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textOn="@string/set_alarm_day_thu" android:textOff="@string/set_alarm_day_thu"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="2dp"/>
                <ToggleButton
                    android:id="@+id/fridayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textOn="@string/set_alarm_day_fri" android:textOff="@string/set_alarm_day_fri"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginHorizontal="2dp"/>
                <ToggleButton
                    android:id="@+id/saturdayToggle"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOn="@string/set_alarm_day_sat" android:textOff="@string/set_alarm_day_sat"
                    android:textSize="12sp" android:paddingVertical="12dp" android:paddingHorizontal="4dp"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>

            <!-- 4. 공휴일 끄기 버튼 -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/holidayOffSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:text="@string/set_alarm_setting_holiday_off"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/repeatDaysLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 5. 알람 이름 -->
            <EditText
                android:id="@+id/alarmNameEditText"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:hint="@string/set_alarm_hint_alarm_name"
                android:inputType="text"
                android:autofillHints="name"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/holidayOffSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 6. 알람음 -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/alarmSoundSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:text="@string/set_alarm_setting_alarm_sound"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/alarmNameEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 7. 진동 -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/vibrationSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:text="@string/set_alarm_setting_vibration"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/alarmSoundSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 8. 다시 울림 -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/snoozeSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:gravity="center_vertical"
                android:text="@string/set_alarm_setting_snooze"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/vibrationSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 9. 알람 배경 -->
            <Button
                android:id="@+id/alarmBackgroundButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:text="@string/set_alarm_button_select_alarm_background"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/snoozeSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 10. 취소/저장 버튼 -->
    <LinearLayout
        android:id="@+id/saveButtonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_alarm_button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_alarm_button_save"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
