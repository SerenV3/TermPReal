<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 현재 시간을 표시하는 TextView -->
    <!-- 주석: android:id="@+id/currentTimeTextView" - 이 TextView를 코드에서 참조하기 위한 고유 ID입니다. -->
    <!-- 주석: android:textSize="48sp" - 텍스트 크기를 48sp로 설정합니다. sp는 글꼴 크기에 사용되는 단위입니다. -->
    <!-- 주석: app:layout_constraintTop_toTopOf="parent" 등 - ConstraintLayout 내에서 UI 요소의 위치를 정의하는 제약 조건입니다. -->
    <TextView
        android:id="@+id/currentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 설정된 알람 상태를 표시하는 TextView -->
    <!-- 주석: android:text="@string/alarm_status_no_alarm_set" - strings.xml에 정의된 문자열 리소스를 사용합니다. -->
    <TextView
        android:id="@+id/alarmStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_status_no_alarm_set"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/currentTimeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 알람 취소 버튼 -->
    <!-- 주석: android:visibility="gone" - 이 버튼은 기본적으로 화면에 보이지 않습니다. 알람이 설정되면 코드를 통해 보이도록 변경합니다. -->
    <!-- 주석: tools:visibility="visible" - Android Studio의 레이아웃 편집기에서 디자인할 때만 임시로 보이도록 합니다. 실제 앱 실행 시에는 적용되지 않습니다. -->
    <Button
        android:id="@+id/cancelAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_alarm_button_text"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 알람 설정/변경을 위한 FloatingActionButton -->
    <!-- 주석: android:src="@android:drawable/ic_lock_idle_alarm" - 안드로이드 시스템 기본 알람 아이콘을 사용합니다. -->
    <!-- 주석: android:contentDescription - 접근성을 위해 이 버튼이 어떤 기능을 하는지 설명하는 문자열입니다. -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/setAlarmFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        android:contentDescription="@string/fab_add_alarm_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white"/> <!-- 아이콘 색상을 흰색으로 설정 -->

</androidx.constraintlayout.widget.ConstraintLayout>